
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Dialog title="Multi-Order Items" contentWidth="600px" core:require="{handler:'caplistreportpage/ext/controller/Add'}" >
        <content>
            
            <Table id="idOrderItemsTable" >
             <headerToolbar>
					<Toolbar>
						<Title text=" Order Items "/>
						<ToolbarSpacer/>
						<Button text="Add" icon="sap-icon://add" press="handler.onAddNewRow"/>
						
					</Toolbar>
				</headerToolbar>
                <columns>
                    <Column>
                        <Text text="ItemID" />
                    </Column>
                    <Column>
                        <Text text="Product Name" />
                    </Column>
                    <Column>
                        <Text text="Quantity" />
                    </Column>
                    <Column>
                        <Text text="Price" />
                    </Column>
                      <Column>
                        <Text text="OrderID" />
                    </Column>
                        <Column>
                        <Text text="Actions" />
                    </Column>
                   
                </columns>
                <items>
                    <!-- <ColumnListItem>
                        <cells>
                            <Input value="{ItemID}" id="idItemIDInput1"  />
                            <Input value="{ProductName}" id="idProductNameInput1" />
                            <Input value="{Quantity}" id="idQuantityInput1" type="Number" />
                            <Input value="{Price}" id="idPriceInput" type="Number" />
                           
                        </cells>
                    </ColumnListItem> -->
                </items>
            </Table>
        </content>
        <beginButton>
            <Button text="Submit" type="Emphasized" press="handler.onOrderitemSubmit" />
        </beginButton>
        <endButton>
            <Button text="Close" type="Reject" press="handler.onorderitemsClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
